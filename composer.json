{
    "name": "rezzza/rest-api-behat-extension",
    "replace": { "rezzza/json-api-behat-extension": "self.version" },
    "type": "behat-extension",
    "description": "Rest Api Extension for Behat",
    "keywords": ["api", "json", "rest", "test"],
    "license": "MIT",
    "homepage": "https://github.com/rezzza/rest-api-behat-extension",
    "authors": [
        {
            "name": "Community contributors",
            "homepage": "https://github.com/rezzza/rest-api-behat-extension/contributors"
        }
    ],
    "autoload": {
        "psr-4": { "Rezzza\\RestApiBehatExtension\\": "src/" }
    },
    "require": {
        "php": ">=5.3.2",
        "behat/behat": "~3.0",
        "atoum/atoum": "~1.0|~2.0",
        "symfony/property-access": "~2.4|~3.0",
        "justinrainbow/json-schema": "^2.0",
        "egeloen/http-adapter": "^0.8.0"
    },
    "require-dev": {
        "silex/silex": "~1.0",
        "symfony/process": "~2.1|~3.0"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    }
}
